[MESSAGES CONTROL]
disable=missing-docstring,
        duplicate-code, ### Temporarily disabled until sample files begin to look different
        bad-continuation, ### Disabled because in conflict with black

[FORMAT]
max-line-length=120

# Allow long lines if they contains long strings
ignore-long-lines="[^"]{80,}"

[TYPECHECK]
ignored-classes=pytest # E1101: Module 'pytest' has no 'helpers' member (no-member)